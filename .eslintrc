extends: eslint:recommended

env:
  browser: true
  commonjs: true
  jquery: true
  mocha: true

rules:
  #no-var: 2
  no-unused-vars: [2, {"args": "none"}]
  consistent-return: 0
  no-fallthrough: 2
  #no-case-declarations: 2
  default-case: 2
  indent: [2, 4]
  semi: 2
  camelcase: 0
  no-underscore-dangle: 2
  space-before-keywords: 1
  space-after-keywords: 1
  space-before-blocks: 1
  space-infix-ops: 1
  space-before-function-paren: [1, "never"]
  brace-style: [1, "1tbs"]

